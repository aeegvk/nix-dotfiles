      let
        pkgs = import nixpkgs {
          inherit system;
          config.allowUnfree = true;
        };
      in
      {
        devShells = {
          default = pkgs.mkShell {
            buildInputs = with pkgs; [
              elixir erlang python3 nodejs yarn docker docker-compose
            ];
            shellHook = ''
              export EDITOR=zed-editor
              echo "ğŸš€ Aeeâ€™s global dev shell"
            '';
          };
